<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cine3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_margin="40dp"
                android:orientation="horizontal">

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/joker" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shrek" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/pulp" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/exorcista" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/jurassic" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/it" />

                <View

                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/padrino" />

            </LinearLayout>
        </HorizontalScrollView>


    </ScrollView>

    <Button
        android:id="@+id/btn_Peliculas"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FFFFFF"
        android:text="Peliculas"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Estrenos"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="225dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/white"
        android:text="Estrenos"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="estreno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>